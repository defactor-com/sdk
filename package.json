{
  "name": "@defactor-com/defactor-sdk",
  "version": "0.0.9",
  "description": "Defactor Development Kit",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "build": "rollup -c",
    "test": "jest",
    "lint": "tsc",
    "release": "yarn build && yarn changeset publish",
    "prepare": "husky install",
    "prebuild": "yarn clean && tsc --emitDeclarationOnly --declaration -p tsconfig.json",
    "clean": "rm -rf dist"
  },
  "main": "dist/cjs/index.js",
  "main-es": "dist/es/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    "node": {
      "types": "./dist/src/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/cjs/index.js"
    },
    "package.json": "./package.json",
    "types": "./dist/src/index.d.ts",
    "default": "./dist/esm/index.js"
  },
  "types": "./dist/src/index.d.ts",
  "repository": "git+ssh://git@github.com/defactor-com/sdk.git",
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.ts": [
      "eslint . --ext .ts",
      "prettier --write"
    ]
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@defactor-com"
  },
  "author": "Defactor Labs",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "rollup": "^4.9.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "ethers": "^6.9.2"
  }
}
