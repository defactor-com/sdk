{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,

    "esModuleInterop": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,

    "types": ["jest"]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["dist/**/*", "node_modules/**/*"]
}
